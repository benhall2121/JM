<div class="mainOverview">
<div class="mainOverview-left-coulmn">

	<div class="mainOverview-user-stats">
	  <div class="level"><span>Level</span> <br /> <span><%= user_level %>/5</span></div>
          <div class="PageViews"><span>PageViews</span> <br /> <span><%= page_views_count %></span></div>
	  <div class="Rank"><span>Rank</span> <br /> <span><%= rank_of_user %></span></div>
	</div>

	<div class="mainOverview-current-tasks">
	<ul class="ttul">
	    <div class="show_page_header_titles center_header">Current Challenge</div>
	    
	    <% if current_challenge_complete %>
	        <div class="show_page_header_titles_small center_header">Next Challenge Available <%= next_challenge_available_date.strftime('%B %d, %Y %I:%M%p') %></div>
		<div class="finishedTodaysTasks"><%= image_tag('/images/checked.png', :class=> "home_checkbox") %> Share one content item to Facebook and/or Twitter</div>  
	     <% else %>
		<div><%= image_tag('/images/unchecked.png', :class=> "home_checkbox") %> Share one content item to Facebook and/or Twitter</div>
	    <% end %>
	</ul>
	</div>
	<div class="mainOverview-tasks">
	<ul class="ttul">
	    <div class="show_page_header_titles center_header">Milestones - Level <%= user_level %></div>
	      <% if user_level == 1 %>
	            <% if milestone_complete_your_first_challenge %>
			<div class="finishedTodaysTasks"><%= image_tag('/images/checked.png', :class=> "home_checkbox") %> Complete your first Challenge</div>  
		     <% else %>
			<div><%= image_tag('/images/unchecked.png', :class=> "home_checkbox") %> Complete your first Challenge</div>
		    <% end %>
		    
		    <% if milestone_achieved_first_page_view %>
			<div class="finishedTodaysTasks"><%= image_tag('/images/checked.png', :class=> "home_checkbox") %> Achieve your first PageView</div>  
		     <% else %>
			<div><%= image_tag('/images/unchecked.png', :class=> "home_checkbox") %> Achieve your first PageView</div>
		    <% end %>
		    
		    <% if milestone_achieved_10th_page_view %>
			<div class="finishedTodaysTasks"><%= image_tag('/images/checked.png', :class=> "home_checkbox") %> Achieve 10 PageViews</div>  
		     <% else %>
			<div><%= image_tag('/images/unchecked.png', :class=> "home_checkbox") %> Achieve 10 PageViews</div>
		    <% end %>
		    
		    <% if milestone_achieved_100th_page_view %>
			<div class="finishedTodaysTasks"><%= image_tag('/images/checked.png', :class=> "home_checkbox") %> Achieve 100 PageViews</div>  
		     <% else %>
			<div><%= image_tag('/images/unchecked.png', :class=> "home_checkbox") %> Achieve 100 PageViews</div>
		    <% end %>
		    
		    <% if milestone_complete_daily_challenges_count >= 5 %>
		        <div class="finishedTodaysTasks"><%= image_tag('/images/checked.png', :class=> "home_checkbox") %> Complete 5 Challenges</div>  
		     <% else %>
			<div><%= image_tag('/images/unchecked.png', :class=> "home_checkbox") %> Complete 5 Challenges</div>
		    <% end %>
	      <% else %>
		   Nothing for any level above 1
	      <% end %>
	 
	</ul>
	</div>
	
	<div class="mainOverview-total-pageviews">
	 Total content views generated by all of us together: <%= all_page_views_count %> <br><br>
	 Goal: 1,000,000 <br>
	 <div id="progressbar" rel="<%= all_page_views_count_divided_by_goal(1000000) %>"></div>
	</div>
	
	</div>


<div class="mainOverview-right-coulmn">

<div class="mainOverview-right-coulmn-top">
        <div class='scraperFields'>
                <div class="show_page_header_titles">Add Content</div>
	        <div id="scraper_input_div">
		        <input type="text" class="text_field" id="scraper_input_id" placeholder="Enter URL" />
		</div>
		<div id="check" style="display:none;">
			<img src='/images/redbutton-check48.png' id="check" height="16px" >
		</div>
		<div id="loader" style="display:none;">
			<img src='/images/loader.gif' id="loader" height="16px" >
		</div>
	</div>
        
	<div id="preview" class="preview" style="display:none">
	
		<div id="attach-web-link-form-left_col" class="attach-web-link-form-left_col">
			<div id="imageSlide">
			<!-- <img name='im' id='im' width='150px' /> -->
			</div>
		</div>
							
		<div id="attach-web-link-form-right_col" class="attach-web-link-form-right_col">
			<div id="site_title" class="site_title"></div>
			<div id="site_link" class="site_link" style="display:none"></div>
			<div id="site_desc" class="site_desc" style="display:none"></div>
			<div id="site_image" class="site_image" style="display:none"></div>
			
			<div class="save_button">
			<div class="submit_link_button_div"><%= link_to_function 'Submit', "check_if_valid()", :class => 'shaded_button' %></div>
			</div>
		</div>
	</div>
	<div id="save_preview" class="save_preview" style="display:none">
	  <div class="link_shareable"></div>
	  <div class="link_share_me">
	    <div class="commentary_links_fp"></div>
	    <div class="fb_tw_fp"></div>
	    <div class="add_new_button">
		<div class="add_new_button_div"><%= link_to_function '+ Add New', "clear_add_content()", :class => 'shaded_button' %></div>
	    </div>
	  </div>
	</div>
</div>

<div class="mainOverview-right-coulmn-bottom">
   <div class="show_page_header_titles_large">Browse and Share content</div>
   <div class="small_link front_page_content"><%= render 'shared/content_nav' %></div>
 
 <div class="all_commentary" id="all_commentary">
 <%= render :partial => "commentaries/frontpage_shareable_commentary"  %>
 </div>
 
</div>

</div>


</div>

<script type="text/javascript">
	$("#progressbar").progressbar({ value: parseInt($('#progressbar').attr('rel')) });
</script>
