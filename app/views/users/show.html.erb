    <% [ 'Option 1', 'Option 2', 'Option 3', 'Option 4'].each do |poll| %>
      <br><%= radio_button_tag 'poll', poll %>
      <%= poll.humanize %>
    <% end %>
    <br />
 <%= link_to_function image_tag('/images/vote_50.png'),'poll_vote()',:id => 'poll_button' %>
 </div>
</div>

